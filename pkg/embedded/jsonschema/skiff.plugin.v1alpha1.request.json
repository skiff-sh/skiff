{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "A single object housing all supported requests. All corresponding responses are of the same name on the Response object.",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "data": {
      "additionalProperties": {
        "additionalProperties": false,
        "properties": {
          "bool": {
            "type": "boolean"
          },
          "list": {
            "additionalProperties": false,
            "properties": {
              "numbers": {
                "items": {
                  "anyOf": [
                    {
                      "type": "number"
                    },
                    {
                      "enum": [
                        "Infinity",
                        "-Infinity",
                        "NaN"
                      ],
                      "type": "string"
                    }
                  ]
                },
                "type": "array"
              },
              "strings": {
                "items": {
                  "type": "string"
                },
                "type": "array"
              }
            },
            "title": "List",
            "type": "object"
          },
          "number": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "enum": [
                  "Infinity",
                  "-Infinity",
                  "NaN"
                ],
                "type": "string"
              }
            ]
          },
          "string": {
            "type": "string"
          }
        },
        "title": "Value",
        "type": "object"
      },
      "description": "The schema data by name specified by the user. All available fields can be found in the \"schema\" field of the package.",
      "propertyNames": {
        "type": "string"
      },
      "type": "object"
    },
    "metadata": {
      "additionalProperties": false,
      "description": "Metadata for the request.",
      "properties": {
        "package": {
          "description": "The name of the package that initiated the request.",
          "type": "string"
        },
        "path": {
          "description": "The path of the original plugin file in the package.",
          "type": "string"
        },
        "target": {
          "description": "The intended target specified in the package.",
          "type": "string"
        }
      },
      "required": [
        "package",
        "target",
        "path"
      ],
      "title": "Request Metadata",
      "type": "object"
    },
    "write_file": {
      "additionalProperties": false,
      "description": "Write a file to the user's machine.",
      "properties": {},
      "title": "Write File Request",
      "type": "object"
    }
  },
  "title": "Request",
  "type": "object"
}
